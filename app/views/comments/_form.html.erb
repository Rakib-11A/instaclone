<!-- app/views/comments/_form.html.erb -->
<%= form_with(model: [post, comment], id: "comment_form") do |form| %>
  <%= form.hidden_field :parent_id %>

  <div class="mb-3">
    <%= form.text_area :text, class: "form-control", rows: 3, placeholder: "Write your comment..." %>
  </div>

  <%= form.submit "Post Comment", class: "btn btn-primary" %>
  <% if comment.parent_id.present? %>
    <%= link_to "Cancel", "#", data: { action: "click->reply#toggle", comment_id: comment.parent_id }, class: "btn btn-secondary" %>
  <% end %>
<% end %>
