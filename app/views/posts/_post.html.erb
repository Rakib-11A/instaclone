<div id="<%= dom_id post %>" class="card mb-4 shadow-sm border-0">
  <%= link_to post_path(post), class: "text-decoration-none text-dark" do %>
    <div class="card-body text-center">

      <% if post.images.attached? %>
        <div class="mb-3">
          <% post.images.each do |image| %>
            <%= image_tag(image, class: "img-fluid rounded", style: "max-height: 300px; object-fit: cover;") %>
          <% end %>
        </div>
      <% end %>

      <h5 class="card-title fw-bold"><%= post.title %></h5>

  <% end %>
      <hr>

  <%= render "likes/like_button", likeable: post %>

  <p class="mt-3">
        <%= link_to post.user.username, post.user, class: "btn btn-sm btn-outline-primary" %>
      </p>
    </div>

</div>
